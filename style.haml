* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

@import _grid;

                            /* Header */

header {
	height: 50px;
	background-color: #313234;
    nav img {
        padding: 10px 0;
    }
    nav ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
        float: right;
        li {
            display:inline-block;
            a {
                line-height: 50px;
                padding: 0 20px;
                display: block;
                color: $firstcolor;
                text-decoration: none; 
                text-transform: uppercase;
                &:hover {
                    background-color: #454649;
                }
            }
        }
    }
}
