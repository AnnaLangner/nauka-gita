* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

@import _grid;

                            /* Header */

header {
	height: 50px;
	background-color: #313234;
    nav img {
        padding: 10px 0;
    }
    nav ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
        float: right;
        li {
            display:inline-block;
            a {
                line-height: 50px;
                padding: 0 20px;
                display: block;
                color: $firstcolor;
                text-decoration: none; 
                text-transform: uppercase;
                &:hover {
                    background-color: #454649;
                }
            }
        }
    }
}
/* Welcome */

.hero {
    height: 400px;
    background-image: url("https://images.unsplash.com/photo-1483058712412-4245e9b90334?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80");
    background-size: cover;
    .slogan {
        float: right;
        max-width: 400px;
        height: 100px;
        background-color: rgba(0,0,0,0.3);
        margin: 150px 0;
        color: $firstcolor;   
        h1 {
            font-weight: lighter;
        }
        span {
            font-weight: bold;
        }
    }
}

 /* galery */
                            
.icon2 {
    color: black;    
    background-color: white;
    font-size: 1.33333em;
    text-align: center;
    border: 4px solid $firstcolor;
    border-radius: 6px;
    padding: 6px;
}
                            
.gallery {
    [class^="col-"] {
        position: relative; 
        padding: 0;
        img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            display: block;
            .layer {
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.7);
                position: absolute;
                top: 0;
                left: 0;
                text-align: center;
                line-height: 200px;
                color: $firstcolor;
                opacity: 0;
                transition: .3s;
                &:hover {
                    opacity: 1;
                }
                a {
                    margin: 10px;
                }
                .fa-camera-retro {
                    @extend .icon2 ;
                    margin-right: 20px;
                }
                .fa-search {
                    @extend .icon2 ;
                }
            }
        }
    }
}